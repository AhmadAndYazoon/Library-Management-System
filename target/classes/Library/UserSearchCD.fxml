<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="pageSearchCDs" prefHeight="650" prefWidth="1000"
            style="-fx-background-color: #F8FAFB;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Library.UserController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom, #38C5B9, #2BAEA2);">
            <padding>
                <Insets top="40" left="10" right="10" />
            </padding>

            <Label text="ðŸ“˜ Library"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Separator opacity="0.2" />

            <Button onAction="#SwitchToPage1"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="Dashboard" />

            <Button onAction="#SwitchToPage2"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="My Books" />

            <Button onAction="#SwitchToPage3"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="Search Books" />

            <Button onAction="#SwitchToCDs"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="My CDs" />

            <Button prefWidth="180"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;"
                    text="Search CDs" />

            <Region VBox.vgrow="ALWAYS"/>

            <Button onAction="#handleLogout"
                    prefWidth="160"
                    style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white;
                           -fx-background-radius: 10; -fx-cursor: hand;"
                    text="ðŸ”’ Logout" />

            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </left>

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50" spacing="8"
              style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20" />
            </padding>

            <Circle fill="#FF5F57" radius="6" onMouseClicked="#handleClose" style="-fx-cursor: hand;" />
            <Circle fill="#FFBD2E" radius="6" onMouseClicked="#handleMinimize" style="-fx-cursor: hand;" />
            <Circle fill="#28C840" radius="6" onMouseClicked="#handleFullscreen" style="-fx-cursor: hand;" />

            <Label text="Search CDs"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 0 10;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" left="40" right="40" />
            </padding>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchCDField"
                           prefWidth="400"
                           promptText="Search by title, artist, or serial..."
                           style="-fx-background-color: #fff; -fx-border-color: #CFCFCF; -fx-border-radius: 8; -fx-padding: 8;" />

                <Button onAction="#handleSearchCD"
                        style="-fx-background-color: #38C5B9; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20;"
                        text="Search" />
            </HBox>

            <TableView fx:id="cdTable" prefHeight="450" prefWidth="750">
                <columns>
                    <TableColumn fx:id="cdTitleColumn2" text="Title" prefWidth="220" />
                    <TableColumn fx:id="cdArtistColumn2" text="Artist" prefWidth="200" />
                    <TableColumn fx:id="cdSerialColumn2" text="Serial" prefWidth="150" />
                    <TableColumn fx:id="cdBorrowedColumn2" text="isBorrowed" prefWidth="150" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" prefWidth="750">
                <Button fx:id="borrowCDButton"
                        onAction="#handleBorrowCD"
                        style="-fx-background-color: #7A5AF5; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-background-radius: 8; -fx-padding: 8 30; -fx-cursor: hand;"
                        text="ðŸ’¿ Borrow Selected CD" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
