<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="page3" prefHeight="650" prefWidth="1000" style="-fx-background-color: #F8FAFB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.UserController">

    
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #38C5B9, #2BAEA2);">
            <padding>
                <Insets left="10" right="10" top="40" />
            </padding>

            <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸ“˜ Library" />

            <Separator opacity="0.2" />

            <Button onAction="#SwitchToPage1" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Dashboard" />
            <Button onAction="#SwitchToPage2" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="My Books" />
            <Button prefWidth="180" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Search Books" />

            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#handleLogout" prefWidth="160" style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="ðŸ”’ Logout" />

            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </left>

    
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50" spacing="8" style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

                <Circle fill="#FF5F57" onMouseClicked="#handleClose" radius="6" style="-fx-cursor: hand;" />
                <Circle fill="#FFBD2E" onMouseClicked="#handleMinimize" radius="6" style="-fx-cursor: hand;" />
                <Circle fill="#28C840" onMouseClicked="#handleFullscreen" radius="6" style="-fx-cursor: hand;" />
                
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 0 10;" text="Search Books" />
        </HBox>
    </top>

    
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets left="40" right="40" top="20" />
            </padding>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" prefWidth="400" promptText="Search by title, author, or ISBN..." style="-fx-background-color: #fff; -fx-border-color: #CFCFCF; -fx-border-radius: 8; -fx-padding: 8;" />
                <Button onAction="#handleSearch" style="-fx-background-color: #38C5B9; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20;" text="Search" />
            </HBox>

            <TableView fx:id="bookTable" prefHeight="450" prefWidth="750">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="220.00006103515625" text="Title" />
                    <TableColumn fx:id="authorColumn" prefWidth="193.5999755859375" text="Author" />
                    <TableColumn fx:id="isbnColumn" prefWidth="156.7999267578125" text="ISBN" />
                    <TableColumn fx:id="borrowedColumn" prefWidth="150.4000244140625" text="isBorrowed" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefWidth="750">
                <Button fx:id="borrowButton" onAction="#handleBorrow" style="-fx-background-color: #38C5B9; -fx-text-fill: white; -fx-font-size: 14;                             -fx-background-radius: 8; -fx-padding: 8 30; -fx-cursor: hand;" text="ðŸ“š Borrow Selected" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
