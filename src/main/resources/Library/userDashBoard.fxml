<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="page1" prefHeight="650" prefWidth="1000" style="-fx-background-color: #F8FAFB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.UserController">

    
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #38C5B9, #2BAEA2);">
            <padding>
                <Insets left="10" right="10" top="40" />
            </padding>

            <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸ“˜ Library" />

            <Separator opacity="0.2" />

            <Button prefWidth="180" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Dashboard" />
            <Button onAction="#SwitchToPage2" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="My Books" />
            <Button onAction="#SwitchToPage3" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Search Books" />

            <Region VBox.vgrow="ALWAYS" />

            <Button onAction="#handleLogout" prefWidth="160" style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="ðŸ”’ Logout" />

            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </left>

    
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50" spacing="8" style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

                <Circle fill="#FF5F57" onMouseClicked="#handleClose" radius="6" style="-fx-cursor: hand;" />
                <Circle fill="#FFBD2E" onMouseClicked="#handleMinimize" radius="6" style="-fx-cursor: hand;" />
                <Circle fill="#28C840" onMouseClicked="#handleFullscreen" radius="6" style="-fx-cursor: hand;" />

            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 0 10;" text="User Dashboard" />
        </HBox>
    </top>

    
    <center>
        <VBox alignment="CENTER" prefWidth="800" spacing="30">
            <padding>
                <Insets left="30" right="30" top="120" />
            </padding>

            <HBox alignment="CENTER" spacing="40">
                
                <VBox alignment="CENTER" spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25 60; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
                    <Label style="-fx-text-fill: #38C5B9; -fx-font-weight: bold; -fx-font-size: 15;" text="Books Borrowed" />
                    <Label fx:id="borrowedCountLabel" style="-fx-font-size: 34; -fx-font-weight: bold; -fx-text-fill: #333;" text="3" />
                </VBox>

                
                <VBox alignment="CENTER" spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25 60; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
                    <Label style="-fx-text-fill: #38C5B9; -fx-font-weight: bold; -fx-font-size: 15;" text="Next Due Book" />
                    <Label fx:id="earliestDueLabel" style="-fx-font-size: 14; -fx-text-fill: #555;" text="â€˜Clean Codeâ€™ - 4 days left" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
