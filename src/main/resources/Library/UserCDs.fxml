<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="pageCDs" prefHeight="650" prefWidth="1000"
            style="-fx-background-color: #F8FAFB;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Library.UserController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom, #38C5B9, #2BAEA2);">
            <padding>
                <Insets top="40" left="10" right="10" />
            </padding>

            <Label text="ðŸ“˜ Library"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Separator opacity="0.2" />

            <Button onAction="#SwitchToPage1"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="Dashboard" />

            <Button onAction="#SwitchToPage2"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="My Books" />


            <Button onAction="#SwitchToPage3"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="Search Books" />

            <Button prefWidth="180"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;"
                    text="My CDs" />
                    
            <Button onAction="#SwitchToSearchCDs"
                    prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    text="Search CDs" />

            <Region VBox.vgrow="ALWAYS"/>

            <Button onAction="#handleLogout"
                    prefWidth="160"
                    style="-fx-background-color: rgba(255,255,255,0.25); -fx-text-fill: white;
                           -fx-background-radius: 10; -fx-cursor: hand;"
                    text="ðŸ”’ Logout" />

            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </left>

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50" spacing="8"
              style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20" />
            </padding>

            <Circle fill="#FF5F57" radius="6" onMouseClicked="#handleClose" style="-fx-cursor: hand;" />
            <Circle fill="#FFBD2E" radius="6" onMouseClicked="#handleMinimize" style="-fx-cursor: hand;" />
            <Circle fill="#28C840" radius="6" onMouseClicked="#handleFullscreen" style="-fx-cursor: hand;" />

            <Label text="My Borrowed CDs"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 0 10;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="TOP_CENTER" spacing="20">
                <padding>
                    <Insets top="40" left="40" right="40" />
                </padding>

                <TableView fx:id="cdBorrowTable" prefHeight="500" prefWidth="750">
                    <columns>
                        <TableColumn fx:id="cdTitleColumn" prefWidth="250" text="Title" />
                        <TableColumn fx:id="cdArtistColumn" prefWidth="200" text="Artist" />
                        <TableColumn fx:id="cdDueColumn" prefWidth="150" text="Due Date" />
                        <TableColumn fx:id="cdSerialColumn" prefWidth="120" text="Serial" />
                    </columns>
                </TableView>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
