<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.MainController">

    <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="ðŸ‘¥ Manage Users" />

    <TableView fx:id="userTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="180" text="Full Name" />
            <TableColumn fx:id="emailColumn" prefWidth="240" text="Email" />
            <TableColumn fx:id="roleColumn" prefWidth="120" text="Role" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleRemoveUser" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 10;" text="Remove Selected User" />
        <Button onAction="#handleSendReminders" style="-fx-background-color: #38C5B9; -fx-text-fill: white; -fx-background-radius: 10;" text="Send Overdue Reminders" />
    </HBox>
</VBox>
