<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Library.MainController"
      alignment="CENTER" spacing="15"
      style="-fx-padding: 20;">

    <Label text="ðŸ‘¥ Manage Users" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <TableView fx:id="userTable" prefWidth="700" prefHeight="400">
        <columns>
            <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="180" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="240" />
            <TableColumn fx:id="roleColumn" text="Role" prefWidth="120" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Remove Selected User" onAction="#handleRemoveUser"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button text="Refresh" onAction="#handleRefreshUsers"
                style="-fx-background-color: #38C5B9; -fx-text-fill: white; -fx-background-radius: 10;" />
    </HBox>
</VBox>
