<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.ManageBooksController">

    <VBox alignment="CENTER" prefHeight="500" prefWidth="630" spacing="10">
        <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333;" text="ðŸ“š Manage Books" />

        <HBox spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <TextField fx:id="titleField" prefWidth="150" promptText="Title" />
            <TextField fx:id="authorField" prefWidth="150" promptText="Author" />
            <TextField fx:id="isbnField" prefWidth="150" promptText="ISBN" />
            <Button onAction="#handleAddBook" style="-fx-background-color: #38C5B9; -fx-text-fill: white;" text="Add Book" />
        </HBox>

        <TableView fx:id="bookTable" prefHeight="500" prefWidth="750">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="171.999966442585" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="207.20008850097656" text="Author" />
                <TableColumn fx:id="isbnColumn" prefWidth="156.79998779296875" text="ISBN" />
                <TableColumn fx:id="borrowedColumn" prefWidth="92.79996337890623" text="Borrowed" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
