<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="420.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.MainController">

    <children>
        <BorderPane prefHeight="420.0" prefWidth="720.0">

            
            <left>
                <Pane prefHeight="420.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to bottom right, #38C5B9, #4DB8E8);" BorderPane.alignment="CENTER">
                    <children>
                        
                        <Circle fx:id="redCircle" fill="#ff5f56" layoutX="20.0" layoutY="20.0" onMouseClicked="#handleClose" radius="6.0" />
                        <Circle fx:id="yellowCircle" fill="#ffbd2e" layoutX="40.0" layoutY="20.0" onMouseClicked="#handleMinimize" radius="6.0" />
                        <Circle fx:id="greenCircle" fill="#27c93f" layoutX="60.0" layoutY="20.0" onMouseClicked="#handleFullscreen" radius="6.0" />
                    </children>
                </Pane>
            </left>

            
            <right>
                <Pane prefHeight="420.0" prefWidth="420.0" style="-fx-background-color: #f8f9fa;" BorderPane.alignment="CENTER">
                    <children>

                        
                        <Text fill="#333333" layoutX="70.0" layoutY="90.0" text="Sign In">
                            <font>
                                <Font name="Poppins SemiBold" size="26.0" />
                            </font>
                        </Text>

                        
                        <TextField fx:id="emailField" layoutX="70.0" layoutY="120.0" prefHeight="38.0" prefWidth="280.0" promptText="Email" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #CFCFCF; -fx-border-radius: 10; -fx-padding: 5 10 5 10;" />

                        
                        <PasswordField fx:id="passwordField" layoutX="70.0" layoutY="180.0" prefHeight="38.0" prefWidth="280.0" promptText="Password" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #CFCFCF; -fx-border-radius: 10; -fx-padding: 5 10 5 10;" />

                        
                        <Button fx:id="loginButton" layoutX="70.0" layoutY="240.0" mnemonicParsing="false" onAction="#SwitchToAdmin" prefHeight="40.0" prefWidth="280.0" style="-fx-background-radius: 12; -fx-background-color: linear-gradient(to right, #38C5B9, #4DB8E8); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Sign In">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        
                        <Text fill="#444444" layoutX="75.0" layoutY="315.0" text="Don't have an account?">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Text>

                        <Button fx:id="signupButton" layoutX="235.0" layoutY="295.0" mnemonicParsing="false" onAction="#SwitchToSignUpForm" prefHeight="35.0" prefWidth="110.0" style="-fx-background-radius: 12; -fx-background-color: transparent; -fx-border-color: #38C5B9; -fx-border-radius: 12; -fx-text-fill: #38C5B9; -fx-font-weight: bold;" text="Sign Up">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                    </children>
                </Pane>
            </right>
        </BorderPane>
    </children>
</AnchorPane>
